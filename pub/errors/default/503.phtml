    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800" rel="stylesheet">
    <link rel="icon" href="images/favicon.ico">
    <style type="text/css">
        *{
            margin: 0;
            padding: 0;
        }
        body{
            font-family: 'Nunito', sans-serif;
        }
        main{
            width: 80%;
            height: auto;
            display: block;
            margin: 0 auto;
            padding-top: 150px;
        }
        main:after{
            content: '';
            display: block;
            clear: both;
        }
        article{
            width: 30%;
            float: left;
        }
        img{
            display: block;
            max-width: 100%;
            height: auto;
            width: 200px;
