            float: left;
        }
        h1{
            font-size: 30px;
            font-weight: 600;
            padding: 15px 0;
            margin: 0;
        }
        p{
            font-size: 16px;
            font-weight: 400;
            padding: 0;
        }
        a{
            color: #e95110;
            text-decoration: none;
        }
        a:hover{
            color: #472d5d;
        }
        @media only screen and (max-width: 768px) {
            article, aside{
                width: 100%;
                float: none;
            }
            main{
                padding-top: 70px;
            }
            h1{
                font-size: 24px;
            }
            img{
                width: 150px;
            }
        }
        @media screen and (min-width: 769px) and (max-width: 991px) {
            h1{
                padding: 0 0 0 20px;
            }
            p{
                padding-left: 20px;
            }
        }
