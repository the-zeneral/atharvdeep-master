<script type="text/javascript">

require(['jquery'], function($){

  $(function(){

  
      var page_number = 1; 
      var page_size = 10; 
      var total_posts = <?php echo $data['total_posts']; ?>; 
      var total_pages  = <?php echo ceil($data['total_posts']/10); ?>; 

      $(window).scroll(function() { 
          if($(window).scrollTop() + $(window).height() >= $(document).height()) { 
            if(page_number<total_pages){
                  page_number++;
                  $.ajax({
                       method:"POST",
                       url:'<?=$baseurl?>stories/lazy/package',
                       data:{ page_size:page_size,page_number:page_number},
                       beforeSend:function(){
                          $("#loader").html('<img src="<?=$this->getViewFileUrl('images/loader.gif')?>" alt="Loading...">');
                       },
                       success:function(data){
                          $("#loader").html('');
                          $("#container-blocksit").append(data);
                       },
                       error:function(data){
                          console.log("error");
                       },
                  });     
            } else {
                $("#loader").html("");
            }
        }
      }); 

  }); 

 });

</script>

  
